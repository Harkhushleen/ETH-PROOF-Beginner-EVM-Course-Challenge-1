pragma solidity 0.8.26;

contract Calculations {
  // State variables to store numbers
  uint public num1;
  uint public num2;

  // Function to set values for num1 and num2
  function setNumbers(uint _num1, uint _num2) public {
    num1 = _num1;
    num2 = _num2;
  }

  // Function to add two numbers
  function add() public view returns(uint) {
    return num1 + num2;
  }

  // Function to subtract two numbers
  function subtract() public view returns(uint) {
    return num1 - num2;
  }

  // Function to multiply two numbers
  function multiply() public view returns(uint) {
    return num1 * num2;
  }

  // Function to divide two numbers with safety check for division by zero
  function divide() public view returns(uint) {
    require(num2 != 0, "Division by zero is not allowed");
    return num1 / num2;
  }
}
